<UserControl x:Class="WeatherApp.WeatherUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherApp"
             mc:Ignorable="d" 
             d:DesignHeight="276.328" d:DesignWidth="196.218">
    <Grid>
        <Image x:Name="imageWeather" HorizontalAlignment="Left" Height="100" Margin="10,40,0,0" VerticalAlignment="Top" Width="176"/>
        <TextBlock x:Name="dateWeather" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Date" VerticalAlignment="Top" Width="176" Height="25"/>
        <TextBlock x:Name="dayTemperatureWeather" HorizontalAlignment="Left" Margin="10,145,0,0" TextWrapping="Wrap" Text="Day" VerticalAlignment="Top" Height="32" Width="88"/>
        <TextBlock x:Name="nightTemperatureWeather" HorizontalAlignment="Left" Margin="103,145,0,0" TextWrapping="Wrap" Text="Night" VerticalAlignment="Top" Height="32" Width="83"/>
        <TextBlock x:Name="specificationWeather" HorizontalAlignment="Left" Margin="10,182,0,0" TextWrapping="Wrap" Text="Погода" VerticalAlignment="Top" Width="176" Height="22"/>
        <TextBlock x:Name="pressureWeather" HorizontalAlignment="Left" Margin="10,209,0,0" TextWrapping="Wrap" Text="Давление" VerticalAlignment="Top"/>
        <TextBlock x:Name="humidityWeather" HorizontalAlignment="Left" Margin="10,230,0,0" TextWrapping="Wrap" Text="Влажность" VerticalAlignment="Top"/>
        <TextBlock x:Name="windWeather" HorizontalAlignment="Left" Margin="10,251,0,0" TextWrapping="Wrap" Text="Ветер" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
