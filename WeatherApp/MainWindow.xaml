<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="withdrawWeatherButton" Content="Вывести погоду" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="112" Height="36" Click="WithdrawWeatherButtonClick"/>
        <TextBlock HorizontalAlignment="Left" Margin="127,10,0,0" TextWrapping="Wrap" Text="Город:" VerticalAlignment="Top" Height="36" Width="138" FontSize="30" Padding="0"/>
        <TextBox x:Name="cityTextBox" HorizontalAlignment="Left" Height="36" Margin="270,10,0,0" TextWrapping="Wrap" Text="Astana" VerticalAlignment="Top" Width="161" FontSize="30"/>
        <ListView x:Name="weatherListView" HorizontalAlignment="Left" Height="339" Margin="10,70,0,0" VerticalAlignment="Top" Width="772">
            <ListView.View>
                <GridView/>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
